{
  "version": 2,
  "projects": {
    "frontend": {
      "src": "frontend/",
      "buildCommand": "npm run build",
      "outputDirectory": "frontend/.next",
      "framework": "nextjs"
    },
    "backend": {
      "src": "backend/",
      "buildCommand": "npm run build",
      "outputDirectory": "backend/api",
      "framework": "node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ]
}

